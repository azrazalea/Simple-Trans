<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <!-- Harvestable Organs -->
  <ThingDef ParentName="BodyPartNaturalBase">
    <defName>CarryingOrgans</defName>
    <label>reproductive anatomy (carrying)</label>
    <description>Reproductive anatomy that enables carrying pregnancies. Can be surgically transplanted.</description>
    <statBases>
      <MarketValue>1500</MarketValue>
      <Mass>1</Mass>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="BodyPartNaturalBase">
    <defName>SiringOrgans</defName>
    <label>reproductive anatomy (siring)</label>
    <description>Reproductive anatomy that enables siring offspring. Can be surgically transplanted.</description>
    <statBases>
      <MarketValue>1500</MarketValue>
      <Mass>1</Mass>
    </statBases>
  </ThingDef>

  <!-- Basic Prosthetics -->
  <ThingDef ParentName="BodyPartProstheticMakeableBase">
    <defName>BasicReproductiveProsthetic_Carry</defName>
    <label>basic reproductive prosthetic (carrying)</label>
    <description>A basic prosthetic reproductive system that enables carrying pregnancies. Reduces carrying fertility by 30% compared to natural anatomy but provides reliable function.</description>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MarketValue>400</MarketValue>
      <Mass>2</Mass>
      <WorkToMake>15000</WorkToMake>
    </statBases>
    <costList>
      <Steel>15</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisites>
        <li>Prosthetics</li>
        <li>FertilityProcedures</li>
      </researchPrerequisites>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
  </ThingDef>

