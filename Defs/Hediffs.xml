<Defs>
  <HediffDef>
    <defName>Cisgender</defName>
    <label>cisgender</label>
    <description>This person's gender identity causes them no issue.</description>
    <everCurableByItem>false</everCurableByItem>
    <isBad>false</isBad>
    <hediffClass>Hediff</hediffClass>
    <defaultLabelColor>(0.45, 0.35, 0.55)</defaultLabelColor>
    <stages>
      <li>
        <becomeVisible>true</becomeVisible>
      </li>
    </stages>
  </HediffDef>

